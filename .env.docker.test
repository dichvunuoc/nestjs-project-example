# Service Configuration
PORT=3000
NODE_ENV=production
SERVICE_NAME=nestjs-ddd-api
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@host.docker.internal:5432/nestjs_project
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=nestjs_project

# Redis Configuration
REDIS_URL=redis://host.docker.internal:6379
REDIS_HOST=host.docker.internal
REDIS_PORT=6379

# Observability
LOG_LEVEL=info
JAEGER_ENDPOINT=http://host.docker.internal:14268/api/traces
PROMETHEUS_PORT=9464
ENABLE_PRETTY_LOGGING=false

# Security
JWT_SECRET=super-secret-key-change-me-in-production
RATE_LIMIT_REDIS_URL=redis://host.docker.internal:6379
